{% if bills|length > 0 %}
    <table class="table table-striped">
        <caption>{% trans %}bill.caption{% endtrans %}</caption>
        <thead>
        <tr>
            <th>{% trans %}bill.name{% endtrans %}</th>
            <th>{% trans %}bill.price{% endtrans %}</th>
            <th>{% trans %}bill.date{% endtrans %}</th>
            <th>{% trans %}bill.actions{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for bill in bills %}
            <tr>
                <td>{{ bill.name }}</td>
                <td>{{ bill.price }}</td>
                <td>{{ bill.date|date('datetime'|trans) }}</td>
                <td>{{ include('bill/buttons.html.twig', { 'bill': bill }) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <div class="alert alert-info" role="alert">{% trans %}bill.none{% endtrans %}</div>
{% endif %}