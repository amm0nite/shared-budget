{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-12">
            <a href="{{ path('sb_budget_new') }}" class="btn btn-default">{% trans %}budget.new{% endtrans %}</a>
        </div>
    </div>

    <div style="height:20px;"></div>

    {% if budgets|length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>{% trans %}budget.name{% endtrans %}</th>
                    <th>{% trans %}budget.bills{% endtrans %}</th>
                    <th>{% trans %}budget.actions{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
                {% for budget in budgets %}
                    <tr>
                        <td>{{ budget.name }}</td>
                        <td>{{ budget.bills|length }}</td>
                        <td>
                            {% if app.user.id == budget.user.id %}
                                <a href="{{ path('sb_budget_edit', { 'id': budget.id }) }}" class="btn btn-default btn-sm"><i class="fa fa-pencil"></i> {% trans %}budget.edit{% endtrans %}</a>
                                <a href="{{ path('sb_budget_delete', { 'id': budget.id }) }}" class="btn btn-default btn-sm"><i class="fa fa-trash"></i> {% trans %}budget.delete{% endtrans %}</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info" role="alert">{% trans %}budget.none{% endtrans %}</div>
    {% endif %}

{% endblock body %}